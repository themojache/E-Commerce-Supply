<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce Supply</title>
    <link rel="stylesheet" media="not print" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" media="not print" href="~/css/icomoon-free.css" />
    <link rel="stylesheet" media="print" href="~/css/print.css">
    @*<link rel="preload" as="font" href="~/fonts/IcoMoon-Free.ttf" type="font/ttf" crossorigin="anonymous">*@
</head>
<body>
    <nav>
        <aside>
            <a asp-page="/Index">E-Commerce Supply</a>
        </aside>
        <form action="/search" method="get">
            <input type="text" name="q" id="q" tabindex="1" maxlength="200" placeholder="Search Products" autocomplete="off" /><input type="submit" value="Search" />
        </form>
        <menu>
            <ul>
                <li><a asp-page="/About">About</a></li>
                <li><a asp-page="/Careers">Careers</a></li>
                <li><a asp-page="/Privacy">Privacy</a></li>
                <li class="popOutParent contactItem">
                    @{Html.RenderPartial("~/Pages/ContactPartial.cshtml", new ECommerceSupply.Pages.IndexModel());}
                </li>
                <li class="popOutParent">
                    @{Html.RenderPartial("~/Pages/LoginPartial.cshtml", new ECommerceSupply.Pages.IndexModel());}
                </li>
                <li><input type="checkbox" id="cartDisplay" name="login_group" onchange="display_cart(this.checked);" /><label for="cartDisplay"><a><i class="icon icon-cart" alt="Cart"></i> <span>0</span></a></label></li>
            </ul>
        </menu>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <aside class="cart"><ul class="list"></ul><div><h2>Total* <span>0</span></h2><p>* This value does not account for cost of shipping and handling, and will be verified by our servers as you Place the Order.</p><input type="button" value="Empty Cart" onclick="clearCartUI();" /><input type="button" value="Place Order" onclick="placeOrder();" /></div></aside>
    <hr />
    <footer>
        <a asp-page="/Contact">Contact Us</a>
        <aside>&copy; 2020 - <a asp-page="/Index">E-Commerce Supply</a></aside>
    </footer>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
